<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginVertical="@dimen/_4sdp"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_cast_profile_card"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_110sdp"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="@dimen/_4sdp"
            app:strokeColor="@color/transparent"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/item_cast_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/dark_gray"
                tools:src="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/item_cast_name"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:text="Robert Downey Jr." />

        <TextView
            android:id="@+id/item_cast_character"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/character_name_color"
            android:textSize="@dimen/_10ssp"
            tools:text="Tony Stark" />

    </LinearLayout>
</layout>
